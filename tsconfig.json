{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react", // Use "react-jsx" for React 17+ with the new JSX runtime
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ESNext",
    "skipLibCheck": true
  }
}
